---
const { title, image, subtitle, description, eventTag, date, pageUrl } =
  Astro.props;
import ContentHeader from "../components/ContentHeader.astro";
---

<div class="content-card" data-tag={eventTag}>
  <a href={pageUrl} class="content-link">
    <div class="content-image">
      <img src={image} alt={title} />
    </div>
    <ContentHeader date={date} eventTag={eventTag} />
    <p class="content-name">{title}</p>
    <p class="content-subtitle">{subtitle}</p>
    <p class="content-description" set:html={description} />
  </a>
</div>
<style>
  .content-link {
    display: block;
    text-decoration: none; /* 下線消し */
    color: inherit; /* テキスト色を継承 */
  }
  .content-card {
    display: flex;
    flex-direction: column; /* 上から縦に積む */
    justify-content: flex-start; /* 上詰め */
    align-items: center; /* 中央寄せ */
    text-align: center; /* テキスト中央揃え */
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    border-radius: 6px;
    overflow: hidden;
    /* transitionにbox-shadowを追加 */
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .content-card:hover {
    /* transform: rotate(0.3deg) scale(1.01); */
    /* 既存の影に、オレンジ色の枠線のような影をカンマ区切りで追加 */
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.25),
      0 0 0 5px var(--orange);
  }
  .content-image {
    width: 100%;
    aspect-ratio: 16 / 9; /* 枠の比率を固定 */
    overflow: hidden; /* はみ出した部分を隠す */
  }

  .content-image img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* アスペクト比を維持して拡大縮小 */
    object-position: top; /* 上中央を基準に切り取り */
    display: block;
  }
  .content-name,
  .content-subtitle,
  .content-description {
    margin: 0 0;
  }
  .content-name {
    font-size: clamp(1.7rem, 1.9vw, 2.5rem);
    width: 100%; /* 親の幅いっぱい使う */
  }
  .content-subtitle {
    position: relative;
    font-size: clamp(1rem, 1.5vw, 1rem);
    line-height: 1.2;
    padding-bottom: 4px;
    width: 100%;
    min-height: calc(1.2em + 4px); /* 文字なしでも行高＋下線分の高さを確保 */
  }
  .content-subtitle::after {
    content: "";
    position: absolute;
    left: 5%;
    right: 5%;
    bottom: 0;
    height: 2px;
    border-radius: 1px;
    background: var(--text);
  }
  .content-description {
    position: relative;
    font-size: clamp(0.75rem, 0.9vw, 0.75rem);
    padding: 1rem 0.5rem; /* 下に少し余白 */
    width: 100%; /* 親の幅いっぱい使う */
    flex: 1;
  }
  /* 追加：スマホ幅 */
  @media (max-width: 635px) {
    .content-card {
      width: 100%; /* 1列時はカードをフル幅に */
    }
  }
</style>

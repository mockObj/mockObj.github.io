---
const { memberName, memberUrl, memberImage } = Astro.props;
---

<div class="member-card">
  <div class="member-circle">
    <a href={memberUrl} target="_blank" rel="noopener noreferrer">
      <img src={memberImage} alt={memberName} width="200" height="200" />
    </a>
  </div>
  <h3 class="member-name">{memberName}</h3>
  <a href={memberUrl} target="_blank" rel="noopener noreferrer">
    <img
      src="/icons/twitter.png"
      class="twitter-icon"
      alt="Twitter Icon"
      width="200"
      height="200"
    />
  </a>
</div>
<style>
  .member-card {
    display: flex;
    flex-direction: column; /* 上から縦に積む */
    align-items: center; /* 中央寄せ */
    text-align: center; /* テキスト中央揃え */
    padding: 1rem;
    box-sizing: border-box;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease;
    position: relative;
    overflow: hidden;
  }
  .member-card:hover {
    transform: rotate(0.3deg) scale(1.01);
  }

  /* 枠線エフェクト */
  .member-card::after {
    content: "";
    position: absolute;
    inset: 0; /* 上下左右0 */
    border: 2px solid transparent; /* 初期は透明 */
    border-image: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.8),
        transparent
      )
      1;
    transform: translateX(-100%);
  }

  .member-card:hover::after {
    animation: border-shine 1s linear forwards;
  }

  @keyframes border-shine {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(100%);
    }
  }

  .member-name {
    margin-top: 10px;
    margin-bottom: 0px;
    font-size: 18px;
  }
  .member-circle {
    width: 90%;
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #333; /* 幅の5% */
    margin: 0 auto;
  }

  .member-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .twitter-icon {
    width: 60px;
    height: 60px;
    display: block;
    object-fit: contain;
    margin: 0 auto;
  }
</style>

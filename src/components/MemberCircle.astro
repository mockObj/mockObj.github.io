---
const { memberName, memberUrl, memberImage, memberRole } = Astro.props;
---

<div class="member-card">
  <div class="member-circle">
    <a href={memberUrl} target="_blank" rel="noopener noreferrer">
      <img src={memberImage} alt={memberName} width="200" height="200" />
    </a>
  </div>
  <h3 class="member-name">{memberName}</h3>
  <p class="member-role">{memberRole.join("・")}</p>
</div>

<style>
  .member-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1rem;
    box-sizing: border-box;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
    border-radius: 8px;
    transition: transform 0.2s ease;
    background: #fff;
  }

  .member-card:hover {
    transform: scale(1.02);
  }

  .member-name {
    margin-top: 0.5rem;
    margin-bottom: 0.2rem;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .member-role {
    font-size: 1rem;
    margin: 0.3rem 0 0;
    color: #666;
  }

  .member-circle {
    width: 100%;
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #333;
  }

  .member-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* スマホサイズ */
  @media (max-width: 635px) {
    .member-name {
      font-size: 0.9rem;
    }
    .member-role {
      font-size: 0.7rem;
    }
  }
</style>

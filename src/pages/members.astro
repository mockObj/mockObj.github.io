---
import BaseLayout from "../layouts/BaseLayout.astro";
import MemberCard from "../components/MemberCard.astro";
const { members } = await import("../scripts/members.js");
---

<BaseLayout pageTitle="Creator">
  <div class="members-main">
    <div class="members-container">
      {
        Object.entries(members).map(([name, m]) => (
          <MemberCard
            memberName={name}
            memberUrl={m.url}
            memberImage={m.image}
          />
        ))
      }
    </div>
  </div>
</BaseLayout>
<style>
  .members-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 基本は3列 */
    gap: 2rem;
    max-width: 800px;
    padding: 2rem; /* 画面幅が狭い時に左右の余白を確保 */
    box-sizing: border-box;
  }

  /* --- メディアクエリの追記 --- */

  /* タブレットサイズなど */
  @media (max-width: 768px) {
    .members-container {
      grid-template-columns: repeat(2, 1fr); /* 2列に変更 */
    }
  }

  /* スマートフォンサイズなど */
  @media (max-width: 480px) {
    .members-container {
      grid-template-columns: 1fr; /* 1列に変更 */
    }
  }
</style>
